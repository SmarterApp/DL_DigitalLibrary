/**
 * Check if the user is an SLT.
 *
 * @param object $account
 *   User object.
 *
 * @return bool
 *   True if an SLT. False otherwise.
 */
function sbac_report_is_slt($account) {
  // First check if the user has resource publisher role.
  if (in_array('resource publisher', $account->roles)) {
    $result = db_select('field_data_field_slt_member', 'slt')
      ->fields('slt', array('field_slt_member_value'))
      ->condition('entity_type', 'user')
      ->condition('entity_id', $account->uid)
      ->condition('field_slt_member_value', '1')
      ->execute();
    $count = $result->rowCount();
    return $result->rowCount();
  }
  return FALSE;
}

/**
 * Check if the user is an SNE.
 *
 * @param object $account
 *   User object.
 *
 * @return bool
 *   True if an SNE. False otherwise.
 */
function sbac_report_is_sne($account) {
  // First check if the user has resource contributor role.
  if (in_array('resource contributor', $account->roles)) {
    $result = db_select('field_data_field_sne_member', 'sne')
      ->fields('sne', array('field_sne_member_value'))
      ->condition('entity_type', 'user')
      ->condition('entity_id', $account->uid)
      ->condition('field_sne_member_value', '1')
      ->execute();
    $count = $result->rowCount();
    return $result->rowCount();
  }
  return FALSE;
}

