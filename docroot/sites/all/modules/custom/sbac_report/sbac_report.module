  $ago_90 = format_date(strtotime('90 days ago'), 'custom', 'Ymd');
  $options = array(
    'Cumulative to date' => $beginning . '--' . $today,
    'Last 30 Days' => $ago_30 . '--' . $today,
    'Last 60 Days' => $ago_60 . '--' . $today,
    'Last 90 Days' => $ago_90 . '--' . $today,
  );

  return $options;
}


