/**
 * User access callback for the /report page.
 */
function sbac_report_user_access() {
  global $user;

  // SLT users are allowed to access the page, but only the individual reports tab
  $account = user_load($user->uid);
  $account->entity_type = 'user';
  $account->entity_id = $account->uid;
  $slt = field_entity_value($account, 'field_slt_member');
  $sne = field_entity_value($account, 'field_sne_member');
  if ($slt || $sne) {
    return TRUE;
  }

  $allowed_roles = array(
    'resource contributor',
    'resource reviewer',
    'resource publisher',
    'administrator',
    'digital library administrator',
    'system administrator',
  );

  if (array_intersect($user->roles, $allowed_roles)) {
    return TRUE;
  }

  return sbac_report_user_access_all($account);
}

/**
 * User access callback for the tabs on the /report page.
 * @return [type] [description]
 */
function sbac_report_user_access_all($account = NULL) {
  if (is_null($account)) {
    global $user;
    $account = $user;
  }

  $allowed_roles = array(
    3   => 'administrator',
    8   => 'digital library administrator',
    23  => 'system administrator',
  );

  return (bool) array_intersect(array_keys($account->roles), array_keys($allowed_roles));
}

/**
 * Checks to see if the current user is allowed to search for other users
 * @return bool
 */
function sbac_report_select_other_users($account) {
  if (is_null($account)) {
    global $user;
    $account = user_load($user);
  }

  $allowed_roles = array(
    'resource publisher',
    'administrator',
    'digital library administrator',
    'system administrator',
  );

  return array_intersect($account->roles, $allowed_roles);
}

