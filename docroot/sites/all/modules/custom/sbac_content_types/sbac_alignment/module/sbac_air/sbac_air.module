/**
 * Implements hook_menu().
 */
function sbac_air_menu() {
  $items = array();

  $items['sbac-air/test-data'] = array(
    'title' => 'Test Air API Data',
    'page callback' => 'sbac_air_test_data',
    'access arguments' => array('admin'),
