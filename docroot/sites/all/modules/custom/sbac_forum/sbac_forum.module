      else {
        form_set_error('', 'You do not have access to add a discussion to this forum.'); // Forum is either restricted or user is not a member.
      }
    }
    else {
      form_set_error('', 'Could not load associated Forum.'); // someone trying to url hack to a different non-existent forum
    }
  }
  else {
    form_set_error('', 'There is no Forum associated with this discussion post.'); // Default forum parent should be passed in. Otherwise it will be an orphan
  }
