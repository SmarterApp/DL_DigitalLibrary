/**
 * Implements hook_entity_view_alter().
 */
function sbac_forum_taxonomy_term_view_alter(&$build) {
  if ($build['#view_mode'] == 'forum_page_card') {
    global $user;
    // Participants
    $count = $build['field_forum_member_count']['#items'][0]['value'];
    $build['field_forum_member_count'][0]['#markup'] = '<div class="field-content">' . $count . '<div class="forum-listing-suffix-label">Members</div></div>';

    // Posts
    $count = $build['field_forum_topic_comment_count']['#items'][0]['value'];
    $build['field_forum_topic_comment_count'][0]['#markup'] = '<div class="field-content">' . $count . '<div class="forum-listing-suffix-label">Posts</div></div>';

    // Discussions
    $count = $build['field_forum_topic_count']['#items'][0]['value'];
    $build['field_forum_topic_count'][0]['#markup'] = '<div class="field-content">' . $count . '<div class="forum-listing-suffix-label">Discussions</div></div>';

    // Forum resource reference

    if (arg(0) !== 'forums' && empty($build['field_forum_resource_ref'][0]['#markup'])) {
      $is_faci = FALSE;
      if (!empty($build['#term']->field_forum_facilitators[LANGUAGE_NONE])) {
        foreach ($build['#term']->field_forum_facilitators[LANGUAGE_NONE] as $index => $values) {
          $faci_user_id = $values['target_id'];
          if ($user->uid == $faci_user_id) {
            $is_faci = TRUE;
          }
        }
        $facilitator_text = '<div class="views-field-nothing"><div class="sbac-forum-faci-status-label">';
        if (!$is_faci) { // Current user is not set as facilitator
          if (!empty($build['#term']->field_forum_facilitators[LANGUAGE_NONE])) {
            $first_item = array_shift($build['#term']->field_forum_facilitators[LANGUAGE_NONE]);
            if ($first_faci_user_id = $first_item['target_id']) {
              $faci_link = sbac_forum__api__get_authpane_hoverover($first_faci_user_id);
              $facilitator_text .= 'Facilitator: ' . $faci_link;
            }
            else { // No facilitator set
              $facilitator_text .= 'Facilitator: None';
            }
          }
          else { // No facilitator set
            $facilitator_text .= 'Facilitator: None';
          }
        }
        else {
          $facilitator_text .= '<span class="facilitator">You are the <span class="sbac-forum-is-faci-highlight">Facilitator</span></span>';
        }
        $facilitator_text .= '</div></div>';
        // Output Facilatator text.
        $build['field_facilitator'] = array('#type' => 'markup', '#markup' => $facilitator_text, '#weight' => -1);
      }
    }
  }
}

// function to get users of a specific state
function sbac_forum_get_state_users($state) {
  $sql = <<<SQL

  SELECT
    u.uid
  FROM {users} u
    LEFT JOIN {field_data_field_state} st
      ON u.uid = st.entity_id
  WHERE
    u.status = :status
    AND st.field_state_tid = :state
  

SQL;

  $result = db_query($sql, array(':status' => '1', ':state' => $state, ':state' => '0'));

  foreach ($result as $row) {
    $users[] = $row;
  }

  return $users;
}

/**
 * Implements hook_field_default_fields_alter().
 *
 * Alter the default fields right before they are cached into the database.
 *
 * @param &$fields
 *   By reference. The fields that have been declared by another feature.
 */
function sbac_forum_field_default_fields_alter(&$fields) {
  $source_dir = drupal_get_path('module', 'sbac_forum') . '/images';

  $field_default_images = array(
    'field_state_or_district_image' => 'state-forum-default.png',
  );

  foreach ($field_default_images as $field_name => $filename) {
    $source = $source_dir . '/' . $filename;
    $destination = 'default_images/' . $filename;
    if (isset($fields[$field_name])) {
      sbac_forum_set_default_image($fields[$field_name], $filename, $source, $destination);
    }
  }
}

function sbac_forum_set_default_image(&$field, $filename, $source, $destination) {
  // See if a default image hasn't been set for this field yet
  if (empty($field['field_config']['settings']['default_image'])) {
    // Dynamically set the user default image on the field
    $destination = file_default_scheme() . '://' . $destination;

    // Check to see if it exists already
    $result = db_select('file_managed', 'f')
      ->fields('f', array('fid'))
      ->condition('f.uri', $destination)
      ->execute();

    $fid = $result->fetchField();

    // Simulate an upload of the default user image
    if (!$fid && file_exists($source)) {
      $file = new stdClass;
      $file->filename = $filename;
      $file->timestamp = REQUEST_TIME;
      $file->uri = $source;
      $file->filemime = file_get_mimetype($source);
      $file->uid = 1;
      $file->status = 1;

      $file = file_copy($file, 'public://', FILE_EXISTS_REPLACE);

      $fid = $file->fid;
    }

    $field['field_config']['settings']['default_image'] = (string) $fid;
  }
}