  );

  $form['cancel'] = array(
    '#type' => 'submit',
    '#value' => 'Cancel',
    '#prefix' => '<div class="dup-btns">',
    '#attributes' => array('id' => array('edit-cancel-media-duplicates'))
  );

  $form['submit'] = array(
    '#type' => 'submit',
    '#value' => 'Save and Continue',
    '#suffix' => '</div>',
    '#attributes' => array('id' => array('edit-save-media-duplicates'))
  );

  return $form;
