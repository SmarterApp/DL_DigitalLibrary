      $output .= '<p>' . l($node->title, $url, array('attributes' => array('title' => $node->title, 'class' => array('sbac-dup'), 'target' => '_blank'), 'absolute' => TRUE)) . '</p>';
      $output .= '<ul>';
      foreach ($media_items as $media) {
        $output .= '<li>' . $media->filename . '</li>';
