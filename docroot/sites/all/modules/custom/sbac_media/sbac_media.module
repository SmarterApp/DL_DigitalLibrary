/**
 * Function to check if there are any downloadable files.
 *
 * @param $files
 * @return bool
 */
function sbac_media_downloadable_scheme($documents) {
  foreach ($documents as $key => $media) {
    if (is_numeric($key)) {
      if ($media->fid) {
        return TRUE;
      }
    }
  }
  return FALSE;
}

