      $form['search_block_form']['#default_value'] = $_SESSION[SBAC_SEARCH_DIGITAL_LIBRARY_KEYWORDS];
    }
    if (current_path() != 'digital-library-resources') {
      $form['#action'] = '/digital-library-resources';
      $form['#submit'][] = 'sbac_search_form_submit';
    }
  }
}

