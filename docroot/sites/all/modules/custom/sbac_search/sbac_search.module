  $form = array();

  $hide_categories_text = t('Hide Categories');
  $hide_categories_class = 'active';
  $should_hide_categories = sbac_search_hide_category_style();

  $current_filters = NULL;
  $hide_a_tag = '';
  if (isset($_SESSION[SBAC_SEARCH_MY_RESOURCES_FILTERS])) {
    $current_filters = $_SESSION[SBAC_SEARCH_MY_RESOURCES_FILTERS];
    $hide_a_tag = 'style="display:none;"';
  }

  if ($should_hide_categories) {
    $hide_categories_text = t('Show Categories');
    $hide_categories_class = '';
  }

  $form['current_filters'] = array(
    '#prefix' => '<a class="category-hide js-hide ' . $hide_categories_class . '" href="#" ' . $hide_a_tag . '>' . $hide_categories_text . '</a>',
    '#type' => 'hidden',
